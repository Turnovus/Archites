<?xml version="1.0" encoding="UTF-8"?>

<Patch>

    <Operation Class="PatchOperationAddModExtension">
        <xpath>Defs/FactionDef[defName="Empire"]</xpath>
        <value>
            <li Class="ArchiteReinforcement.FactionExtension">
                <!-- Reduce the base chance so that fewer non-entitled pawns have upgrades. -->
                <factionMemberArchiteGenChanceFactor>0.9</factionMemberArchiteGenChanceFactor>
                <!-- Vanilla titles come in steps of 100 seniority, so this is a +30% chance per title level. -->
                <genChanceFacterOffsetPerTitleSeniority>0.003</genChanceFacterOffsetPerTitleSeniority>
            </li>
        </value>
    </Operation>

</Patch>