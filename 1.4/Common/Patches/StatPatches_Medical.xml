<?xml version="1.0" encoding="UTF-8"?>

<Patch>

    <!-- Medical Operation Speed -->
    <Operation Class="ArchiteReinforcement.PatchOperationAddStatPart">
        <xpath>Defs/StatDef[defName="MedicalOperationSpeed"]</xpath>
        <value>
            <li Class="ArchiteReinforcement.StatPart_ArchiteUpgrades">
                <architeDef>Turn_ArchiteUpgrade_MedicalOperationSpeed</architeDef>
            </li>
        </value>
    </Operation>

    <!-- Medical Tend Speed -->
    <Operation Class="ArchiteReinforcement.PatchOperationAddStatPart">
        <xpath>Defs/StatDef[defName="MedicalTendSpeed"]</xpath>
        <value>
            <li Class="ArchiteReinforcement.StatPart_ArchiteUpgrades">
                <architeDef>Turn_ArchiteUpgrade_MedicalTendSpeed</architeDef>
            </li>
        </value>
    </Operation>

    <!-- Medical Tend Quality -->
    <Operation Class="ArchiteReinforcement.PatchOperationAddStatPart">
        <xpath>Defs/StatDef[defName="MedicalTendQuality"]</xpath>
        <value>
            <li Class="ArchiteReinforcement.StatPart_ArchiteUpgrades">
                <architeDef>Turn_ArchiteUpgrade_MedicalTendQuality</architeDef>
            </li>
        </value>
    </Operation>

    <!-- Medical Surgery Success Chance -->
    <Operation Class="ArchiteReinforcement.PatchOperationAddStatPart">
        <xpath>Defs/StatDef[defName="MedicalSurgerySuccessChance"]</xpath>
        <value>
            <li Class="ArchiteReinforcement.StatPart_ArchiteUpgrades">
                <architeDef>Turn_ArchiteUpgrade_MedicalSurgerySuccessChance</architeDef>
            </li>
        </value>
        <prepend>true</prepend>
    </Operation>

</Patch>