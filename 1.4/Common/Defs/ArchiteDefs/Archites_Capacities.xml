            <color>(0.0, 0.0, 1.0)</color>
        </graphicData>

        <thingSetMakerTags>
            <li>RewardStandardMidFreq</li>
        </thingSetMakerTags>

        <statBases>
            <MarketValue>3500</MarketValue>
